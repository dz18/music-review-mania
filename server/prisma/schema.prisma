generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(cuid())
  email         String @unique
  username      String @unique
  password      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  aboutMe       String?
  age           Int?

  role          Role @default(USER)
  
  following     Follow[] @relation("Following")
  followers     Follow[] @relation("Follower")

  likedArtists    UserLikedArtist[]
  likedReleases   UserLikedRelease[]
  likedSongs      UserLikedSong[]

  artistReviews   UserArtistReviews[]
  releaseReviews  UserReleaseReviews[]
  songReviews     UserSongReviews[]

}

model Follow {
  id            String  @id @default(cuid())
  followerId    String
  followingId   String

  follower      User @relation("Following", fields: [followerId], references: [id])
  following     User @relation("Follower", fields: [followingId], references: [id])

  createdAt     DateTime @default(now())

  @@unique([followerId, followingId])
}

model Artist {
  id            String @id
  name          String

  liked         UserLikedArtist[]
  reviews       UserArtistReviews[]
}

model Release {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  liked     UserLikedRelease[]
  reviews       UserReleaseReviews[]
}

model Song {
  id            String @id
  title         String
  artistCredit  Json
  coverArt      String?

  liked     UserLikedSong[]
  reviews       UserSongReviews[]
}

model UserLikedArtist {
  user User @relation(fields: [userId], references: [id])
  userId String
  artist Artist @relation(fields: [artistId], references: [id])
  artistId String
  since DateTime @default(now())

  @@id([userId, artistId])
}

model UserLikedRelease {
  user User @relation(fields: [userId], references: [id])
  userId String
  release Release @relation(fields: [releaseId], references: [id])
  releaseId String
  since DateTime @default(now())

  @@id([userId, releaseId])
}

model UserLikedSong {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String
  since DateTime @default(now())

  @@id([userId, songId])
}

model UserArtistReviews {
  user User @relation(fields: [userId], references: [id])
  userId String

  artist Artist @relation(fields: [artistId], references: [id])
  artistId String

  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags  ArtistReviewTag[]
  status  Status

  @@id([userId, artistId])
}

model UserReleaseReviews {
  user User @relation(fields: [userId], references: [id])
  userId String

  release Release @relation(fields: [releaseId], references: [id])
  releaseId String

  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags  ReleaseReviewTag[]
  status  Status

  @@id([userId, releaseId])
}

model UserSongReviews {
  user User @relation(fields: [userId], references: [id])
  userId String
  song Song @relation(fields: [songId], references: [id])
  songId String

  rating Decimal
  title String?
  review String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags  SongReviewTag[]
  status  Status

  @@id([userId, songId])
}

model Tag {
  id        String   @id @default(cuid())   // internal, never exposed
  slug      String   @unique                // URL-safe, lowercase
  name      String                          // display name
  createdAt DateTime @default(now())

  artistReviewTags  ArtistReviewTag[]
  releaseReviewTags ReleaseReviewTag[]
  songReviewTags    SongReviewTag[]
}

model ArtistReviewTag {
  review UserArtistReviews @relation(fields: [reviewUserId, reviewArtistId], references: [userId, artistId], onDelete: Cascade)

  reviewUserId   String
  reviewArtistId String

  tag   Tag   @relation(fields: [tagId], references: [id])
  tagId String

  @@id([reviewUserId, reviewArtistId, tagId])
  @@index([tagId])
}

model ReleaseReviewTag {
  review UserReleaseReviews @relation(fields: [reviewUserId, reviewReleaseId], references: [userId, releaseId], onDelete: Cascade)

  reviewUserId    String
  reviewReleaseId String

  tag Tag @relation(fields: [tagId], references: [id])
  tagId String

  @@id([reviewUserId, reviewReleaseId, tagId])
  @@index([tagId])
}

model SongReviewTag {
  review UserSongReviews @relation(fields: [reviewUserId, reviewSongId], references: [userId, songId], onDelete: Cascade)

  reviewUserId String
  reviewSongId String

  tag Tag @relation(fields: [tagId], references: [id])
  tagId String

  @@id([reviewUserId, reviewSongId, tagId])
  @@index([tagId])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  DRAFT
  PUBLISHED
}

enum Type {
  ARTIST
  SONG
  RELEASE
}


